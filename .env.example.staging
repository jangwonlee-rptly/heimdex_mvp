# --- Runtime ---
HEIMDEX_ENV=staging
HEIMDEX_LOG_LEVEL=info

# --- Auth (Firebase or OIDC) ---
HEIMDEX_AUTH_PROVIDER=firebase
HEIMDEX_FIREBASE_PROJECT_ID=CHANGE_ME
HEIMDEX_JWT_ISSUER=https://securetoken.google.com/CHANGE_ME
HEIMDEX_JWT_AUDIENCE=CHANGE_ME

# --- Storage (GCS) ---
HEIMDEX_STORAGE_BACKEND=gcs
HEIMDEX_DERIVED_ROOT=derived
HEIMDEX_GCP_PROJECT_ID=CHANGE_ME
HEIMDEX_GCS_BUCKET=CHANGE_ME
HEIMDEX_GCP_SIGNING_SERVICE_ACCOUNT=CHANGE_ME@CHANGE_ME.iam.gserviceaccount.com
HEIMDEX_GCP_SIGNING_KEY_PATH=/secrets/heimdex-api-key.json
# Allowed scheme becomes gs when backend=gcs
# HEIMDEX_ALLOWED_SOURCE_URI_SCHEMES is computed from backend

# --- Database (Cloud SQL or staging DB) ---
HEIMDEX_DB_URL=postgresql+asyncpg://CHANGE_ME:CHANGE_ME@CHANGE_ME:5432/heimdex

# --- Jobs (Cloud Tasks / PubSub adapter or Redis) ---
HEIMDEX_JOB_BACKEND=gcp_tasks
HEIMDEX_JOB_MAX_RETRIES=3
HEIMDEX_REDIS_URL=redis://vna-redis:6379/0

# --- Feature flags ---
HEIMDEX_ENABLE_LEGACY=false
