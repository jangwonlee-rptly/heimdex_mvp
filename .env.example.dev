# --- Runtime ---
HEIMDEX_ENV=development
HEIMDEX_LOG_LEVEL=debug

# --- Auth (local HS256) ---
HEIMDEX_AUTH_PROVIDER=local
HEIMDEX_JWT_SECRET=CHANGE_ME_DEV_ONLY
HEIMDEX_JWT_ISSUER=heimdex-local
HEIMDEX_JWT_AUDIENCE=heimdex

# --- Storage (local) ---
HEIMDEX_STORAGE_BACKEND=local
HEIMDEX_DERIVED_ROOT=derived
# Only local files allowed in dev:
# (routes already compute this if backend=local; included here for clarity)
HEIMDEX_ALLOWED_SOURCE_URI_SCHEMES=file

# --- Database (dev compose) ---
HEIMDEX_DB_URL=postgresql+asyncpg://heimdex:heimdex@vna-postgres:5432/heimdex

# --- Jobs (dev) ---
HEIMDEX_JOB_BACKEND=inline
HEIMDEX_JOB_MAX_RETRIES=2

# --- Redis (optional for local queue) ---
HEIMDEX_REDIS_URL=redis://vna-redis:6379/0

# --- GCS (unused in dev; placeholders) ---
HEIMDEX_GCP_PROJECT_ID=
HEIMDEX_GCS_BUCKET=
HEIMDEX_GCP_SIGNING_SERVICE_ACCOUNT=
HEIMDEX_GCP_SIGNING_KEY_PATH=/secrets/heimdex-api-key.json

# --- Feature flags ---
HEIMDEX_ENABLE_LEGACY=false
